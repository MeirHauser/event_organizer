<div class = 'container' id = 'container'>
	<h1 id = 'edit_user'>Edit User</h1>
	<a href="/events/index" id = 'dashboard'>Events Dashboard</a>
	<form action='/sessions' method='post' id = 'form_log_out'>
	    <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
	    <input type='hidden' name='_method' value='delete'>
	    <input type='submit' value='Log Out' class="btn btn-warning">
	</form>
	<form action = '/users/<%= @user.id %>' method = 'post' id = 'edit_form'>
		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		<input type="hidden" name="_method" value="patch">
		<div class="form-group">
			<label class="control-label col-sm-2" for = 'first_name'>First Name:</label>
			<div class = 'col-sm-10'>
				<input id = 'first_name' type = 'text' name = 'first_name' class="form-control" value = <%= @user.first_name %>>
			</div>
		</div>
	 	<div class="form-group">
			<label class="control-label col-sm-2" for = 'last_name'>Last Name:</label>
			<div class = 'col-sm-10'>
				<input id = 'last_name' type = 'text' name = 'last_name' class="form-control" value = <%= @user.last_name %>>
			</div>
	 	</div>
	 	<div class="form-group">
			<label class="control-label col-sm-2" for = 'email'>Email:</label>
			<div class = 'col-sm-10'>
				<input id = 'email' type = 'text' name = 'email' class="form-control" value = <%= @user.email %>>
			</div>
	 	</div>
	 	<div class="form-group">
			<label class="control-label col-sm-2" for = 'location'>City:</label>
			<div class = 'col-sm-10'>
				<input id = 'location' type = 'text' name = 'location' class="form-control" value = "<%= @user.location %>">
			</div>
	 	</div>
	 	<div class="form-group">
			<label class="control-label col-sm-2" for = 'state'>State:</label>
			<div class = 'col-sm-10'>
				<input id = 'state' type = 'text' name = 'state' class="form-control" value = <%= @user.state %>>
			</div>
	 	</div>
	 	<input type = 'submit' value = 'Update' class="btn btn-primary" id = 'edit_button'>
	</form>
	<form action='/users/<%= @user.id %>' method='post' id = 'delete_form'>
	    <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
	    <input type='hidden' name='_method' value='delete'>
	    <input type='submit' value='Delete Account' class="btn btn-danger">
	</form>
</div>	